                                <option value="">-- Seleccione analisis --</option>
                                <% listAnalisis.forEach(a=>{
                                    %>
                                    <option value="<%= a.id_analisis %>"> <%= a.descripcion %></option>
                                    <%
                                }) %>
                                
                            </select>
                            <div class="r"><input type="date"></div>
                            <button> Crear</button>
    
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer></footer>
</body>
</html>