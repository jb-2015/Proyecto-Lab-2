<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generar Orden</title>
    <%- include('imports/imports') %>
</head>
<body>
    <header>
        <%- include('parcial/nav',{logo:true,titulo:true,value:"Registrar Orden",menu:true})%>
    </header>
    <main>
        <div class="tContainer">
            <div class="r border-on">
                <div class="c3 f-column">
                    <div class="r">
                        <div class="c4">
                            <div class="r">

                                <div class="c2"> <h2>Paciente:  </h2> <h3><%= person.persona.nombre+" "+person.persona.apellido %></h3> </div>
                                <div class="c2"> <h2>DNI:</h2> <h3><%= person.persona.dni %></h3> </div>
                            </div>
                        </div>
                    </div>

                    <div class="r">
                        <div class="c4 f-column">

                            <div class="r">                            
                                    <label>Pedido</label>                                               
                            </div>
                            <div class="r">
                                <input type="text" id="diagnostico" placeholder="Diagnostico" >
                                
                            </div>
                            <input type="hidden" class="form-control" id="id_persona" value="<%= person.persona.id_persona %>">
                            <input type="hidden" class="form-control" id="dni_persona" value="<%= person.persona.dni %>">
                            <div class="r"><input type="text" id="nombre_medico" placeholder="Nombre Medico"></div>
                            <div class="r"><input type="text" id="nro_matricula" placeholder="NÂº Matricula"></div>
    
                            <label for="analisisList">Elegir Analisis</label>
                            <select name="analisisList" id="analisisList">
                                <option value="">-- Seleccione analisis --</option>
                                <% listAnalisis.forEach(a=>{
                                    %>
                                    <option value="<%= a.id_analisis %>"> <%= a.descripcion %></option>
                                    <%
                                }) %>
                                
                            </select>
                            <div class="r">
                                <div class="c4">
                                    <ul id="muestrasSolicitadas">
                                        
                                    </ul>
                                </div>
                            </div>
                            <div class="r"><input id="fecha_creacion" type="date"> </div>
                            <select name="estado_orden" id="estado_orden">
                                <% estados.forEach(e=>{
                                    %> <option value="<%= e.id_estado %>"><%= e.nombre %></option> <%
                                }) %>
                            </select>
                            <button id="btncrear"> Crear</button>
    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer></footer>
</body>
</html>